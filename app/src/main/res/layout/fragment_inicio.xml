<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment">

    <!-- TODO: Update blank fragment layout -->



    <Button
        android:id="@+id/registro"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:backgroundTint="#FF9800"
        android:text="Registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/emergencia"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/registro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:backgroundTint="#F60404"
        android:text="Emergencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <Button
        android:id="@+id/historial"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/emergencia"
        android:layout_marginTop="150dp"
        android:backgroundTint="#0AB811"
        android:text="Historial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergencia" />

</androidx.constraintlayout.widget.ConstraintLayout>